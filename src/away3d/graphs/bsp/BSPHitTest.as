package away3d.graphs.bsp{	import away3d.graphs.bsp.BSPTree;	import away3d.graphs.bsp.BSPNode;	import away3d.tools.utils.BaryCentricTest;	import away3d.core.math.Number3D;	import away3d.materials.BitmapMaterial;	import away3d.core.base.Face;	import away3d.core.base.UV;		import flash.display.BitmapData;	 	/**	 * Rays to BSP geometry hittest	 * Ideal to build FPS game, where weapons need to check a hit, animate a missile or both...	 */ 	public final class BSPHitTest	{		private var _tree:BSPTree;		private var _arr:Array;		private var _intersect = new Number3D(0.0,0.0,0.0);		private var _EPSintersect = new Number3D(0.0,0.0,0.0);		 		/**		 * Creates a new BSPHittest object.		 *		 * @param a BSPTree instance		 */		public function BSPHitTest(bspTree:BSPTree)		{			_tree = bspTree;		}				/**		* Finds the closest intersection along a segment with the BSP planes 		* 		* @param start	The starting position (camera position for instance)		* @param end	The position (the camera position for instance)		* @param xtra	adds to the Vector just an extra value to make sure its into the node in case		* of use of methode "getUVIntersectPosition"				* @return A Number3D of the intersection. Null if no hit.		*/		public function getIntersectPosition(start:Number3D, end:Number3D, xtra:Number = 0):Number3D		{			if(_tree.traceCollision(start, end)){				var collisionRatio:Number = _tree.collisionRatio;				_intersect.x = start.x + collisionRatio*(end.x-start.x);				_intersect.y = start.y + collisionRatio*(end.y-start.y);				_intersect.z = start.z + collisionRatio*(end.z-start.z);				return _intersect;			}						return null;		}				/**		* Finds the uv's and the map of the face found at the closest intersection, the closest intersection along a segment with the BSP planes 		* 		* @param start The starting position (camera position for instance)		* @param end The position (the camera position for instance)				* @return An Array or null								array = [intersection, uv, bitmapdata]				[Number3D, the intersection in space, 				UV of the intersection. Null if no hit or nodeleaf is empty,				the bitmapData assigned to the face. Null if there's not]					*/		public function getUVIntersectPosition(start:Number3D, end:Number3D):Array		{		 	_intersect = getIntersectPosition(start, end, 200);			 			if(_intersect == null)				return null;			 			 _EPSintersect.x = _intersect.x + _tree.collisionPlane.a * BSPTree.EPSILON;			 _EPSintersect.y = _intersect.y + _tree.collisionPlane.b * BSPTree.EPSILON;			 _EPSintersect.z = _intersect.z + _tree.collisionPlane.c * BSPTree.EPSILON;			 			var node:BSPNode = _tree.getLeafContaining(_EPSintersect);			//should not be null, but prevents crashes during dev/debug.			// and if you tell no one, nobody will ever know.			if(node == null)				return null;						var faces:Array = node.mesh.geometry.faces;			//empty node			if(faces.length == 0)				return null;						var f:Face;			var arr:Array;			var uv:UV;			for(var i:int = 0;i<faces.length;++i){				f = faces[i];				uv = BaryCentricTest.getUVs(f.v0, f.v1, f.v2, f.uv0, f.uv1, f.uv2, _intersect);				if(uv != null){					var bmd:BitmapData = (f.material is BitmapMaterial)? BitmapMaterial(f.material).bitmap : null;					return [_intersect, uv, bmd];				}			}			return null; 		}			}}